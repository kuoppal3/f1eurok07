    <% include header %>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Pelaajien pistetilanne</h1>
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Pelaaja</th>
                        <th>Pisteet</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i < sortedPlayers.length; ++i) { %>
                      <tr>
                        <td><%= i + 1 %></td>
                        <td><%= sortedPlayers[i].name %></td>
                        <td><%= sortedPlayers[i].totalRank %></td>
                      </tr>
                    <% } %> 
                    </tbody>
                </table>
            </div>
           
           <div class="col-md-6">
                <h1>Kuljettajien pistetilanne</h1>
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Kuljettaja</th>
                        <th>Pisteet</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i < drivers.length; ++i) { %>
                      <tr>
                        <td><%= i + 1 %></td>
                        <td><%= drivers[i].name %></td>
                        <td><%= drivers[i].points %></td>
                      </tr>
                    <% } %> 
                    </tbody>
                </table>
            </div> 
        </div><!-- row -->
        </div>
    <!-- playerlisting begins here -->
    <div class="container-fluid">
      <div class="row">
      
          <h1>Pelaajalista</h1>
          <% for(var i = 0; i < players.length; ++i) { %>
              <% if(i % 10 === 0) { %>
                <div class="col-lg-1 col-lg-offset-1 col-md-2 col-sm-4 col-xs-6">
              <% } else { %>
                <div class="col-lg-1 col-md-2 col-sm-4 col-xs-6">
              <% } %>

                  <table class="table table_sm_font table-striped table-bordered table-hover table-condensed">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th><%= players[i].name %></th>
                        </tr>
                      </thead>
                      <tbody>
                      <% for(var d = 0; d < players[i].driverRanks.length; ++d) { %>
                        <% if(players[i].driverRanks[d].color === "green") { %>
                          <tr class="success">
                        <% } else if(players[i].driverRanks[d].color === "yellow") { %>
                          <tr class="warning">
                        <% } else { %>
                          <tr class="danger">
                        <% } %>
                          <td><%= d + 1 %></td>
                          <td><%= players[i].driverRanks[d].name %></td>
                        </tr>
                      <% } %>
                      </tbody>
                  </table>
              </div>
          <% } %> 
    
      </div>
    </div>
    </body>
<!-- close html from header -->
</html>